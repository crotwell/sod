eventstatus.create=CREATE TABLE eventstatus( eventid int, eventcondition int, \
                                             PRIMARY KEY( eventid ))
querytimes.create=CREATE TABLE querytimes (query_time timestamp, \
                                           server varchar, \
                                           dns varchar, \
                                           UNIQUE (server, dns))
eventchannelstatus.create=CREATE TABLE eventchannelstatus( pairid int, \
                                                           eventid int, \
                                                           channelid int, \
                                                           status int, \
                                                           PRIMARY KEY (pairid), \
                                                           UNIQUE (eventid, channelid))
eventchannelretry.create=CREATE TABLE eventchannelretry( pairid int, \
                                                         numfailure int DEFAULT 0, \
                                                         retry_time timestamp, \
                                                         PRIMARY KEY (pairid))
eventchannelcookiejar.create=CREATE TABLE eventchannelcookiejar( pairid int, \
                                                                 name varchar, \
                                                                 value double, \
                                                                 valuestring varchar, \
                                                                 valueobject object, \
                                                                 UNIQUE (pairid, name))
eventrecordsection.create=CREATE TABLE eventrecordsection( recSecId int, \
														  eventid int, \
														  imageName varchar, \
														  bestForEvent boolean, \
														  PRIMARY KEY (recSecId))
														 
recordsectionchannel.create=CREATE TABLE recordsectionchannel( recSecId int, \
															   channelid int, \
															   FOREIGN KEY(recSecId) \
															   REFERENCES eventrecordsection (recSecId))

eventrecordsection.insert=INSERT INTO eventrecordsection (recSecId, eventid, imageName, bestForEvent) VALUES (?, ?, ?, ?)

recordsectionchannel.insert=INSERT INTO recordsectionchannel (recSecId, channelid) VALUES (?, ?)	

eventrecordsection.getBestImageforEvent=SELECT imageName FROM eventrecordsection WHERE eventid=? AND bestForEvent		

recordsectionchannel.updateRecordSection=UPDATE recordsectionchannel SET recSecId=? WHERE eventrecordsection.recSecId=recordsectionchannel.recSecId \
										 AND eventid=? AND channelid=?

eventrecordsection.getImageforEventChannel=SELECT imageName FROM eventrecordsection, recordsectionchannel \
										   WHERE eventrecordsection.recSecId= recordsectionchannel.recSecId AND \
										     eventid = ? AND channelid = ? 
										

RecordSectionSeq.create=CREATE SEQUENCE RecordSectionSeq
RecordSectionSeq.nextVal=SELECT NEXTVAL ('RecordSectionSeq')

EventChannelSeq.create=CREATE SEQUENCE EventChannelSeq
EventChannelSeq.nextVal=SELECT NEXTVAL ('EventChannelSeq')

version.create=CREATE TABLE version( dbversion varchar, \
                                     PRIMARY KEY (dbversion) )

config.create=CREATE TABLE config( configString varchar, \
                                   PRIMARY KEY (configString) )

networkstatus.create=CREATE TABLE networkstatus( networkid int, status int, \
                                                 FOREIGN KEY(networkid) \
                                                 REFERENCES network (net_id))

newchannels.create=CREATE TABLE newchannels( channelid int, \
                                             FOREIGN KEY(channelid) \
                                             REFERENCES channel (chan_id))
