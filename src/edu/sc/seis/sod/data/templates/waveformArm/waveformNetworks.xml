<?xml version="1.0"?>
<html>
<header><title>Networks in the waveform arm</title>
<style media="all">@import "main.css";</style>
<script type="text/javascript" src="tableRuler.js"> </script>
<script type="text/javascript">
        window.onload=function(){tableruler();}
</script>
<script type="text/javascript" src="sorttable.js"></script>

<style type="text/css">
/* Sortable tables */
table.sortable a.sortheader {
    background-color:#eee;
    color:#666666;
    font-weight: bold;
    text-decoration: none;
    display: block;
}
table.sortable span.sortarrow {
    color: black;
    text-decoration: none;
}
</style>
</header>
<body>

<div id="Header">
Networks
</div>
<div id="Content">
<table class="sortable" id="netTable">
<tr  class="title">
<th>Code</th>
<th>Name</th>
</tr>
#foreach ( $net in $successful_networks )
#set ($netyear = $fissures.networkCodeYear($net.getNetworkAccess()) )
#set ($netCode = $fissures.formatNetwork($net.getNetworkAccess().get_attributes().get_id()) )
<tr>
#if ($net.getNetworkAccess().get_attributes().get_code().startsWith("X") || $net.getNetworkAccess().get_attributes().get_code().startsWith("X") || $net.getNetworkAccess().get_attributes().get_code().startsWith("X"))
<td>$netyear</td>
#else
<td>$net.getNetworkAccess().get_attributes().get_code()</td>
#end
<td><a href="waveformStations/${netCode}.html">$fissures.networkName($net.getNetworkAccess())</a></td>
</tr>
#end
</table>
</div>
<div id="footer">
<h2>Page last generated:</h2>$fissures.formatDate($fissures.now())<br/>
</div>
</body>
</html></template>


