<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="edu.sc.seis.seisFile.fdsnws.stationxml.Network" >
        <cache usage="read-write"/>
        <id name="dbid" type="integer">
            <generator class="native" />
        </id>
        <property name="networkCode" index="net_code_idx" />
        <property name="startDateTime" type="Instant" />
        <property name="endDateTime" type="Instant" />
        <property name="restrictedStatus" />
        <property name="description" type="text"/>
    </class>
    
    <class name="edu.sc.seis.seisFile.fdsnws.stationxml.Station" >
        <cache usage="read-write"/>
        <id name="dbid" type="integer">
            <generator class="native" />
        </id>
        <property name="stationCode" index="station_code_idx" />
        <many-to-one name="network" class="edu.sc.seis.seisFile.fdsnws.stationxml.Network"/>
        <property name="networkCode" />
        <property name="startDateTime" type="Instant" />
        <property name="endDateTime" type="Instant" />
        <property name="restrictedStatus" />
        <property name="description" type="text"/>
        
        <!-- 
        <property name="latitudeFloat" type="float"/>
        <property name="longitudeFloat" type="float"/>
        <property name="elevationFloat" type="float"/>
        -->
        
		<component name="latitude" class="edu.sc.seis.seisFile.fdsnws.stationxml.DegreeFloatType">
				<property name="value" column="latitude_value" type="float"  />
		</component>
		<component name="longitude" class="edu.sc.seis.seisFile.fdsnws.stationxml.DegreeFloatType">
				<property name="value" column="longitude_value" type="float"  />
		</component>
		<component name="elevation" class="edu.sc.seis.seisFile.fdsnws.stationxml.MeterFloatType">
				<property name="value" column="elevation_value" type="float"  />
		</component>
    </class>
    
    <class name="edu.sc.seis.seisFile.fdsnws.stationxml.Channel" >
        <cache usage="read-write"/>
        <id name="dbid" type="integer">
            <generator class="native" />
        </id>
        <property name="channelCode" index="channel_code_idx" />
        <property name="locCode" />
        <many-to-one name="station" class="edu.sc.seis.seisFile.fdsnws.stationxml.Station"/>
        <property name="stationCode" />
        <property name="networkCode" />
        <property name="startDateTime" type="Instant" />
        <property name="endDateTime" type="Instant" />
        <property name="restrictedStatus" />
        <property name="description" type="text"/>
        <!-- 
        <property name="latitudeFloat" type="float"/>
        <property name="longitudeFloat" type="float"/>
        <property name="elevationFloat" type="float"/>
        <property name="depthFloat" type="float"/>
        <property name="azimuth" type="float"/>
        <property name="dip" type="float"/>
        -->
        
		<component name="latitude" class="edu.sc.seis.seisFile.fdsnws.stationxml.DegreeFloatType">
				<property name="value" column="latitude_value" type="float"  />
		</component>
		<component name="longitude" class="edu.sc.seis.seisFile.fdsnws.stationxml.DegreeFloatType">
				<property name="value" column="longitude_value" type="float"  />
		</component>
		<component name="elevation" class="edu.sc.seis.seisFile.fdsnws.stationxml.MeterFloatType">
				<property name="value" column="elevation_value" type="float"  />
		</component>
		<component name="depth" class="edu.sc.seis.seisFile.fdsnws.stationxml.MeterFloatType">
				<property name="value" column="depth_value" type="float"  />
		</component>
		<component name="azimuth" class="edu.sc.seis.seisFile.fdsnws.stationxml.DegreeFloatType">
				<property name="value" column="azimuth_value" type="float"  />
		</component>
		<component name="dip" class="edu.sc.seis.seisFile.fdsnws.stationxml.DegreeFloatType">
				<property name="value" column="dip_value" type="float"  />
		</component> 
		<component name="sampleRate" class="edu.sc.seis.seisFile.fdsnws.stationxml.HertzFloatType">
				<property name="value" column="sampleRate_value" type="float"  />
		</component> 
    </class>
    
    
</hibernate-mapping>
