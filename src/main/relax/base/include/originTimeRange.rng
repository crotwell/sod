<?xml version="1.0" encoding="UTF-8"?>
<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    xmlns="http://relaxng.org/ns/structure/1.0" xmlns:xsd="http://http://www.w3.org/2001/XMLSchema">
    <start combine="choice">
        <notAllowed/>
    </start>
    <define name="originTimeRange">
        <element name="originTimeRange">
            <xsd:annotation>
                <xsd:documentation xml:lang="en">
                    <summary>Matches events whose time occurs within the given range</summary>
                    <description>Matches events where the origin time lies within (inclusive) of the two time. The time may be given as an ISO time string, or the special elements &lt;now/&gt; or &lt;future/&gt; which correspond to the start time of the run and a date far into the future respectively. If the endTime is not given, it defaults to future, meaning that the event just needs to occur after the start time.
                    </description>
                </xsd:documentation>
            </xsd:annotation>
        <element name="startTime">
            <xsd:annotation>
                <example>
                    <startTime>20020701T00:00:00.001Z</startTime>
                </example>
            </xsd:annotation>
            <ref name="originTime"/>
        </element>
        <optional>
            <element name="endTime">
                <xsd:annotation>
                    <example>
                        <endTime>20021030T00:00:00.001Z</endTime>
                    </example>
                </xsd:annotation>
                <ref name="originTime"/>
            </element>
        </optional>
        </element>
    </define>
    <define name="originTime">
            <choice>
                <ref name="time"/>
                <ref name="networkStartTime"/>
                <ref name="networkEndTime"/>
            </choice>
    </define>
    <define name="networkStartTime">
        <element name="networkStartTime">
            <xsd:annotation>
                <xsd:documentation xml:lang="en">
                    <summary>Provides the earliest start time from the channels retrieved by the network arm.</summary>
                </xsd:documentation>
            </xsd:annotation>
            <empty/>
        </element>
    </define>
    <define name="networkEndTime">
        <element name="networkEndTime">
            <xsd:annotation>
                <xsd:documentation xml:lang="en">
                    <summary>Provides the latest end time from the channels retrieved by the network arm.  This is often far in the future if the channel is still active.</summary>
                </xsd:documentation>
            </xsd:annotation>
            <empty/>
        </element>
    </define>
</grammar>
