<?xml version="1.0" encoding="UTF-8"?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns:xsd="http://http://www.w3.org/2001/XMLSchema">
    <include href="quantity.rng"/>
    <include href="taup.rng"/>
    <start combine="choice">
        <notAllowed/>
    </start>
    <define name="phaseWindow">
        <optional>
            <element name="model">
                <ref name="model"/>
            </element>
        </optional>
        <element name="beginPhase">
            <ref name="phaseName"/>
        </element>
        <element name="beginOffset">
            <xsd:annotation>
                <example>
                    <beginOffset>
                        <unit>SECOND</unit>
                        <value>-60</value>
                    </beginOffset>
                </example>
            </xsd:annotation>
            <choice>
                <ref name="time"/>
                <ref name="randomOffset"/>
            </choice>
        </element>
        <element name="endPhase">
            <ref name="phaseName"/>
        </element>
        <element name="endOffset">
            <xsd:annotation>
                <example>
                    <endOffset>
                        <unit>SECOND</unit>
                        <value>360</value>
                    </endOffset>
                </example>
            </xsd:annotation>
            <choice>
                <ref name="time"/>
                <ref name="randomOffset"/>
            </choice>
        </element>
    </define>
    <define name="randomOffset">
        <optional>
            <element name="ratio">
                <data type="double"/>
            </element>
        </optional>
        <element name="minimum">
            <ref name="time"/>
        </element>
        <optional>
            <element name="negative">
                <empty/>
            </element>
        </optional>
    </define>
</grammar>
