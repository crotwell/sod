    <build>
        <nagEmailAddress>jaster@seis.sc.edu</nagEmailAddress>
        <sourceDirectory>src</sourceDirectory>
        <unitTestSourceDirectory>test/unit</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test*.java</include>
            </includes>
            <excludes>
                <exclude>XMLConfigUtil.java</exclude>
                <exclude>**/CoverageTestData.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>test/unit/edu/sc/seis/sod/data</directory>
                    <targetPath>edu/sc/seis/sod/data</targetPath>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src/edu/sc/seis/sod/editor</directory>
                <targetPath>edu/sc/seis/sod/editor</targetPath>
