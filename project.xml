    <build>
        <nagEmailAddress>jaster@seis.sc.edu</nagEmailAddress>
        <sourceDirectory>src</sourceDirectory>
        <unitTestSourceDirectory>test/unit</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test*.java</include>
            </includes>
            <excludes>
                <exclude>XMLConfigUtil.java</exclude>
                <exclude>**/CoverageTestData.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>test/unit/edu/sc/seis/sod/data</directory>
                    <targetPath>edu/sc/seis/sod/data</targetPath>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src/edu/sc/seis/sod/editor</directory>
                <targetPath>edu/sc/seis/sod/editor</targetPath>
                <includes>
                    <include>names.prop</include>
                    <include>*.gif</include>
                    <include>*.png</include>
                </includes>
            </resource>
            <resource>
                <directory>src/edu/sc/seis/sod/database/props</directory>
                <targetPath>edu/sc/seis/sod/database/props</targetPath>
                <includes>
                    <include>*.props</include>
                </includes>
            </resource>
            <resource>
                <directory>scripts</directory>
                <targetPath>edu/sc/seis/sod/data/configFiles</targetPath>
                <includes>
                    <include>weed.xml</include>
                    <include>tutorial.xml</include>
                    <include>legacyExecute.xml</include>
                    <include>legacyVectorExecute.xml</include>
                    <include>realtime.xml</include>
                    <include>breqfast.xml</include>
