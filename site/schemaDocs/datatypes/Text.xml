<?xml version="1.0"?>
<document>
    <properties>
        <title>Text Datatype</title>
    </properties>
    <body>
        <section name="Any Text">
            <p>Any amount of text can go here. You must escape the characters XML uses like &lt;
                with &amp;lt; so that it SOD doesn't think you're adding more tags, but other
                than that, anything goes. </p>
            <table>
                <tr>
                    <td>Escaped Character</td>
                    <td>Escape Sequence</td>
                </tr>
                <tr>
                    <td>&quot;</td>
                    <td>&amp;quot;</td>
                </tr>
                <tr>
                    <td>&apos;</td>
                    <td>&amp;apos;</td>
                </tr>
                <tr>
                    <td>&lt;</td>
                    <td>&amp;lt;</td>
                </tr>
                <tr>
                    <td>&gt;</td>
                    <td>&amp;gt;</td>
                </tr>
            </table>
        </section>
    </body>
</document>
